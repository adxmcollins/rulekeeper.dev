---
import '../styles/global.css';
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.bunny.net" />
		<link
			href="https://fonts.bunny.net/css?family=nunito:400,400i,700|jetbrains-mono:400"
			rel="stylesheet"
		/>
		<title>RuleKeeper CLI for Claude Code</title>
		<meta
			name="description"
			content="A cross-platform CLI tool for syncing and managing Claude Code rules across multiple projects."
		/>
		<meta property="og:type" content="website" />
		<meta property="og:title" content="RuleKeeper CLI for Claude Code" />
		<meta
			property="og:description"
			content="A cross-platform CLI tool for syncing and managing Claude Code rules across multiple projects."
		/>
		<meta property="og:image" content="/og.jpg" />
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="RuleKeeper CLI for Claude Code" />
		<meta
			name="twitter:description"
			content="A cross-platform CLI tool for syncing and managing Claude Code rules across multiple projects."
		/>
		<meta name="twitter:image" content="/og.jpg" />
	</head>
	<body class="min-h-screen flex items-center justify-center bg-primary/15 text-black/75 font-sans">
		<main class="w-full max-w-100 flex flex-col items-center gap-6">
			<div class="flex flex-col items-center gap-2">
				<img src="/logo.svg" alt="Rulekeeper logo" class="w-40 sm:w-60" />
				<h1 class="text-4xl sm:text-5xl font-bold tracking-tight text-center">RuleKeeper</h1>
			</div>
			<p class="text-base sm:text-lg leading-tight! tracking-tight text-center">
				A cross-platform CLI tool for syncing and managing Claude Code rules across multiple
				projects.
			</p>
			<div class="flex justify-center items-center gap-1.5 sm:gap-3">
				<div class="bg-black text-white px-8 sm:px-10 py-3 sm:py-4 rounded-lg text-sm sm:text-base">
					<code id="install-cmd">npm i -g rulekeeper</code>
				</div>
				<button
					id="copy-btn"
					type="button"
					class="shrink-0 p-2 hover:bg-black/10 rounded transition-colors cursor-pointer text-black/75"
					aria-label="Copy to clipboard"
				>
					<svg
						id="copy-icon"
						xmlns="http://www.w3.org/2000/svg"
						width="20"
						height="20"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
						class="w-5 h-5"
					>
						<rect width="14" height="14" x="8" y="8" rx="2" ry="2"></rect>
						<path d="M4 16c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h10c1.1 0 2 .9 2 2"></path>
					</svg>
					<svg
						id="check-icon"
						class="hidden"
						xmlns="http://www.w3.org/2000/svg"
						width="20"
						height="20"
						viewBox="0 0 24 24"
						fill="none"
						stroke="currentColor"
						stroke-width="2"
						stroke-linecap="round"
						stroke-linejoin="round"
					>
						<polyline points="20 6 9 17 4 12"></polyline>
					</svg>
				</button>
			</div>
			<ul class="flex justify-center gap-5">
				<li>
					<a
						href="https://github.com/adxmcollins/rulekeeper#readme"
						target="_blank"
						rel="noopener noreferrer"
						class="flex items-center gap-1.5 hover:text-black transition-colors"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="18"
							height="18"
							viewBox="0 0 24 24"
							fill="none"
							stroke="currentColor"
							stroke-width="2"
							stroke-linecap="round"
							stroke-linejoin="round"
						>
							<path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"></path>
						</svg>
						Docs
					</a>
				</li>
				<li>
					<a
						href="https://github.com/adxmcollins/rulekeeper"
						target="_blank"
						rel="noopener noreferrer"
						class="flex items-center gap-1.5 hover:text-black transition-colors"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="18"
							height="18"
							viewBox="0 0 24 24"
							fill="currentColor"
						>
							<path
								d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
							></path>
						</svg>
						GitHub
					</a>
				</li>
				<li>
					<a
						href="https://x.com/adamcollins"
						target="_blank"
						rel="noopener noreferrer"
						class="flex items-center gap-1.5 hover:text-black transition-colors"
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							width="16"
							height="16"
							viewBox="0 0 24 24"
							fill="currentColor"
						>
							<path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"></path>
						</svg>
						adamcollins
					</a>
				</li>
			</ul>
		</main>
	</body>

	<script>
		const copyBtn = document.getElementById('copy-btn');
		const installCmd = document.getElementById('install-cmd');
		const copyIcon = document.getElementById('copy-icon');
		const checkIcon = document.getElementById('check-icon');

		copyBtn?.addEventListener('click', async () => {
			if (installCmd) {
				await navigator.clipboard.writeText(installCmd.textContent || '');
				copyIcon?.classList.add('hidden');
				checkIcon?.classList.remove('hidden');
				setTimeout(() => {
					copyIcon?.classList.remove('hidden');
					checkIcon?.classList.add('hidden');
				}, 2000);
			}
		});
	</script>
</html>
